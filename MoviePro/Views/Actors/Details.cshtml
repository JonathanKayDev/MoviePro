@using MoviePro.Models.TMDB
@model ActorDetail


<div class="d-flex align-items-center">
  <div class="flex-shrink-0">
    <img src="@Model.profile_path" alt="Actor Image">
  </div>
  <div class="flex-grow-1 ms-3">
        <div class="row">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td>Name:</td>
                        <td>
                            @Model.name
                        </td>
                    </tr>
                    <tr>
                        <td>Biography:</td>
                        <td>
                            @Model.biography
                        </td>
                    </tr>
                    <tr>
                        <td>Birthday:</td>
                        <td>
                            @Model.birthday
                        </td>
                    </tr>
                    <tr>
                        <td>Place of birth:</td>
                        <td>
                            @Model.place_of_birth
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
  </div>
</div>