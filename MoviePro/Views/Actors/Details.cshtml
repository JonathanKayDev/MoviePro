@using MoviePro.Models.TMDB
@model ActorDetail


<div class="d-flex align-items-center">
    <div class="row mb-4">
        <div class="col-sm-12 col-md-4 mt-2">
            <img class="img-fluid" src="@Model.profile_path" alt="Actor Image">
        </div>
        <div class="col-sm-12 col-md-8 mt-2">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td>Name:</td>
                        <td>
                            @Model.name
                        </td>
                    </tr>
                    <tr>
                        <td>Biography:</td>
                        <td>
                            @Model.biography
                        </td>
                    </tr>
                    <tr>
                        <td>Birthday:</td>
                        <td>
                            @Model.birthday
                        </td>
                    </tr>
                    <tr>
                        <td>Place of birth:</td>
                        <td>
                            @Model.place_of_birth
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>

    </div>
</div>
<div class="row mt-4 mb-4">
    <div class="col-12 mt-40 mb-4"></div>
</div>