@using MoviePro.Models.Database
@model MovieCollection

<!-- Manage Collections -->
<div class="container" style="width: 75%;">
    <div class="row justify-content-center">
        <div class="col">
            <h2 class="library-titles">MANAGE COLLECTIONS</h2>
            <hr class="hr-blue"/>
        </div>
    </div>
    <div class="row text-bg justify-content-between pt-3">
        <div class="col">
            <form asp-action="Index">
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <select asp-for="CollectionId" class="form-control" asp-items="ViewBag.CollectionId"></select>
                        </div>
                        <div class="col-2">
                            <button name="Add" type="button" class="btn btn-primary btn-block">ADD</button>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-5">
                            <h3>IN COLLECTION</h3>
                            <select class="btn-block" name="InCollectionValues" id="InCollectionList" multiple></select>
                            <button name="Up" class="btn mt-2" style="width: 40%">Up</button>
                            <button name="Down" class="btn mt-2" style="width: 40%">Down</button>
                        </div>
                        <div class="col-2">
                            <button name="AllOut" class="btn-block mt-4">>></button>
                            <button name="SelectedOut" class="btn-block">></button>
                            <button name="AllIn" class="btn-block"><</button>
                            <button name="SelectedIn" class="btn-block"><<</button>
                        </div>
                        <div class="col-5">
                            <h3>NOT IN COLLECTION</h3>
                            <select class="btn-block" name="NotInCollectionValues" id="NotInCollectionList" multiple></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-primary mt-2">SUBMIT</button>
                </div>
            </form>
        </div>

    </div>
</div>

