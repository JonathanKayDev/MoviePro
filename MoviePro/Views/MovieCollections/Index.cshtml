@using MoviePro.Models.Database
@model Collection

<!-- Manage Collections -->
<div class="container" style="width: 75%;">
    <div class="row justify-content-center">
        <div class="col">
            <h2 class="library-titles">MANAGE COLLECTIONS</h2>
            <hr class="hr-blue"/>
        </div>
    </div>
    <div class="row text-bg justify-content-between pt-3">
        <div class="col">
            <form asp-action="Index">
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <select id="CollectionId" class="form-control" asp-items="ViewBag.CollectionId"></select>
                        </div>
                        <div class="col-2">
                            <button name="Add" type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#collection">ADD</button>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-5">
                            <h3>IN COLLECTION</h3>
                            <select class="btn-block" name="InCollectionValues" id="InCollectionList" multiple></select>
                            <button name="Up" class="btn mt-2" style="width: 40%">Up</button>
                            <button name="Down" class="btn mt-2" style="width: 40%">Down</button>
                        </div>
                        <div class="col-2">
                            <button name="AllOut" class="btn-block mt-4">>></button>
                            <button name="SelectedOut" class="btn-block">></button>
                            <button name="AllIn" class="btn-block"><</button>
                            <button name="SelectedIn" class="btn-block"><<</button>
                        </div>
                        <div class="col-5">
                            <h3>NOT IN COLLECTION</h3>
                            <select class="btn-block" name="NotInCollectionValues" id="NotInCollectionList" multiple></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-primary mt-2">SUBMIT</button>
                </div>
            </form>
        </div>

    </div>
</div>

<!-- Modals-->
<div class="modal fade" id="collection" tabindex="-1" role="dialog" aria-labelledby="collectionLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Movie Collection</h5>
      </div>
      <div class="modal-body" id="collectionForm">
        <form asp-action="Create" asp-controller="Collections">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-block btn-primary mt-2">ADD</button>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>